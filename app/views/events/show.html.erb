<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @event.text %>
</p>
 
<h2>Add a comment:</h2>
<%= form_for([@event, @event.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>